@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>@ViewData["Title"]</title>
    <meta name="description" content="Pro collab Landing page" />
    <meta name="keywords" content="" />
    <meta name="author" content="Kweeka" />
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true">
  </head>
    <!-- hero Section -->
    <header class="hero w-full md-desk:h-[50rem] home__gradient">
      <div class="w-[35%] absolute top-[12rem] left-20">
        <h1 class="font-roboto font-bold text-4xl text-[#f1f1f1] leading-[50px]">
          Move fast, stay aligned, and build better - together 
        </h1>
        <p class="text-xl font-poppins text-[#f1f1f1] pt-10 pb-10 leading-8">
          Break the big ideas down into manageable chunks across teams with user stories, issues, and tasks.
        </p>
        @using (@Html.BeginForm("signOnlyEmail", "Login", FormMethod.Post, new { @id = "form_sign_email", @class = "flex gap-4" })) {
          @Html.AntiForgeryToken()
          @Html.TextBox("Email", "", new { @class = "p-3 w-[64%] rounded-[0.25rem] focus-visible:outline-none", @placeholder = "Enter email" })
          <button type="submit" class="px-3 py-3 text-[#f1f1f1] rounded-[0.25rem] bg-blue-500">Get started - <small>It's free</small></button>
        }
      </div>
      <div class="absolute top-[8rem] right-16">
        <img src="/images/main.svg" alt="Header image" width="650px" srcset="">
      </div>
    </header>
    <!-- Features Section -->
    <section class="features w-full text-center p-12 h-[54rem] bg-[#F0F3FA]">
      <p class="text-slate-500 text-[17px] font-normal pb-2">Exclusive Stunning Features</p>
      <h1 class="features__title relative font-rajdhani font-bold text-4xl text-[#47566B] leading-[50px]">
        A Complete Software Based Website
        <span class="absolute w-[150px] bg-blue-400 h-1 top-[4rem] left-[44%] rounded-full"></span>
        <p class="text-slate-500 pt-10 pb-6 text-[15.5px] leading-6 w-3/5 m-auto font-normal font-lato">
          Powering a productive team means using a powerful tool. From meetings and projects to events and goal setting, Pro Collab’s intuitive features give any team the ability customize workflows for just about anything.
        </p>
      </h1>
      <div class="grid grid-cols-3 gap-12 py-6 px-16">
        <div class="bg-[#f7f8fd] text-[17px] w-[22rem] p-6 rounded shadow-sm">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="#2C85EF" class="bi bi-graph-up-arrow m-auto" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M0 0h1v15h15v1H0V0Zm10 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-1 0V4.9l-3.613 4.417a.5.5 0 0 1-.74.037L7.06 6.767l-3.656 5.027a.5.5 0 0 1-.808-.588l4-5.5a.5.5 0 0 1 .758-.06l2.609 2.61L13.445 4H10.5a.5.5 0 0 1-.5-.5Z"/>
          </svg>
          <div class="bg-blue-100 rounded mt-4 mb-4 p-2 w-fit mx-auto">
            <h1 class="px-2 text-[#204c86] font-opensans">Display what you need</h1>
          </div>
          <p class="font-normal text-slate-600 text-[15px] font-lato">Keep all of the information you need at your fingertips with easy-to-read charts and tables.</p>
        </div>
        <div class="bg-[#f7f8fd] text-[17px] w-[22rem] p-6 rounded shadow-sm">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="#2C85EF" class="m-auto bi bi-view-stacked" viewBox="0 0 16 16">
            <path d="M3 0h10a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2zm0 1a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3zm0 8h10a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2zm0 1a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1H3z"/>
          </svg>
          <div class="bg-blue-100 rounded mt-4 mb-4 p-2 w-fit mx-auto">
            <h1 class="px-2 text-[#204c86] font-opensans">Optimize your work</h1>
          </div>
          <p class="font-normal text-slate-600 text-[15px] font-lato">See all your issues at a glance, add custom views to display your most important issues and organize each view to your preference.</p>
        </div>
        <div class="bg-[#f7f8fd] text-[17px] w-[22rem] p-6 rounded shadow-sm">   
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="#2C85EF" class="m-auto bi bi-card-checklist" viewBox="0 0 16 16">
              <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
