@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200&family=Gudea:wght@400;700&family=IBM+Plex+Sans:wght@300;400;500&family=Lato:wght@300;400;700&family=Open+Sans:wght@300;400;500&family=Poppins:wght@300;500;600;700;800&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet"> 
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="/js/layut.js"></script> *@
</head>
<body class="bg-slate-100">
    <div class="h-[3.5rem] w-[100vw] shadow-md flex flex-row py-[0.5rem] px-4 justify-between bg-slate-200">
        <div class="flex flex-row cursor-pointer pl-4">
            <img src="/images/logo4.svg">
            <h1 class="text-[#385e72] font-medium text-lg font-roboto p-[0.5rem]">Pro Collab</h1>
        </div>
        <div class="flex flex-row gap-6 relative menu-container">
            <div class="begin py-[0.5rem] relative cursor-pointer getstarted w-[6rem]">
                <span class="circle"></span>
                <span class="chevron-right"></span>
                @Html.ActionLink("Get Started", "Lobby", "Main", 
                    htmlAttributes: new { @class="text-[#385e72] font-medium text-md font-roboto cursor-pointer getstarted__link" } )
            </div>
            <div class="flex flex-row gap-8 relative links__contaier">
                <span class="line absolute h-1 w-0 bg-slate-600 top-8 left-0 menu-transition"></span>
                @Html.ActionLink("Contact", "Lobby", "Main", 
                    htmlAttributes: new { @class="py-[0.5rem] text-[#385e72] font-medium text-md font-roboto cursor-pointer" } )
                @Html.ActionLink("Features", "Lobby", "Main", 
                    htmlAttributes: new { @class="py-[0.5rem] text-[#385e72] font-medium text-md font-roboto cursor-pointer" } )
                @Html.ActionLink("About", "Lobby", "Main", 
                    htmlAttributes: new { @class="py-[0.5rem] text-[#385e72] font-medium text-md font-roboto cursor-pointer" } )
            </div>
        </div>
        <div class="flex flex-row cursor-pointer gap-4 pr-6">
            <button class="text-zinc-200 font-medium text-md transition font-roboto bg-[#489dd1] px-5 rounded-3xl hover:bg-[#0067b3]">Sign Up</button> 
            <button class="text-zinc-200 font-medium text-md font-roboto transition bg-[#489dd1] px-5 rounded-3xl hover:bg-[#0067b3]">Login</button>
        </div>
    </div>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <script>
        $(function() {
            $(".links__contaier a").each(function(index, elem) {
                $(elem).on("mouseenter", function() {
                    $(".line").css({opacity: 1, width: elem.offsetWidth + 8, left: elem.offsetLeft - 5})
                })
            })
            $(".menu-container").on("mouseleave", function() {
                $(".line").css({opacity: 0})
            })
        })
    </script>
</body>
</html>